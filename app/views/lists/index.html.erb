<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
  </div>
</div>

<div class="card-trip container py-5">
  <div class="card-trip-infos">
    <div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category" data-aos="zoom-in">
            <li><%= list.name %></li>
              <img style="width: 250px"src="https://previews.123rf.com/images/pincarel/pincarel1702/pincarel170200002/72443668-canisters-de-film-isol%C3%A9s-sur-fond-blanc-tas-de-bo%C3%AEtes-de-bobines-de-film-.jpg" />
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
    </div>
  </div>
</div>
